[Unit]
Description=Titus Simulator API Service
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/titusSimulator-v0.1
Environment="PATH=/home/ubuntu/titusSimulator-v0.1/venv/bin:/usr/bin"
Environment="PYTHONPATH=/home/ubuntu/titusSimulator-v0.1/src"
ExecStart=/home/ubuntu/titusSimulator-v0.1/venv/bin/python -m uvicorn titus_simulator.api:app --host 0.0.0.0 --port 8087
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
